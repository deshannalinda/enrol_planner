<div class = "container" style = "padding-bottom: 70px">

  <div class="media">
    <div class="media-body">
      <table class="table table-hover">
        <thead>
          <tr>
          <th>Stream Code</th>
          <th>Stream Name</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @streams.each do |stream| %>
          <tr>
            <td><%= stream.streamCode %></td>
            <td><%= stream.streamName %></td>
            <td><%= link_to 'Edit', edit_stream_path(stream) %></td>
            <td><%= link_to 'Delete', stream, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class = 'row'>
    <div class = 'col-md-6'>
      <hr>
      <h5 style = 'font-weight:bold'>Resubmit your CSV</h5>
      <br>
      <%= form_tag import_streams_path, multipart: true do %>
        <%= file_field_tag :file %>
        <br>
        <%= submit_tag "Upload Streams", class: 'btn btn-primary btn-sm' %>
      <% end %>
    </div>

    <div class = 'col-md-6'>
      <hr>
      <h5 style = 'font-weight:bold'>Download & Print</h5>
      <br>
      <%= link_to "Download CSV", streams_path(format: "csv"), class: 'btn btn-success btn-sm' %>
      <%= link_to "Download PDF", streams_path(format: "pdf"), class: 'btn btn-warning btn-sm' %>
      <%=link_to_function "Print this Page", "javascript:print()", class: 'btn btn-info btn-sm' %>
    </div>
  </div>
</div>

<%= render partial: "master_layouts/footer" %>
