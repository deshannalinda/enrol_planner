<div id="edituserbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                 
    <div class="panel panel-success" >
        <div class="panel-heading">
            <div class="panel-title">Editing User</div>
        </div>

        <div style="padding-top:30px" class="panel-body" >	
            <%= form_for(@user) do |f| %>

                <!-- START Error message -->
                <% if @user.errors.any? %>
                    <div id="error_explanation">
                        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
                        <ul>
                            <% @user.errors.full_messages.each do |msg| %>
                                <li><%= msg %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>
                <!-- END Error message -->

                <!-- Staff ID -->
                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <%= f.text_field :email, placeholder: 'Staff ID', required: true, autofocus: true, class: 'form-control' %>
                </div>

                <!-- New password -->
                <div style="margin-bottom: 15px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <%= f.password_field :password, placeholder: 'New password', required: true, class: 'form-control' %>
                </div>

                <!-- New password confirmation -->
                <div style="margin-bottom: 15px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', required: true, class: 'form-control' %>
                </div><br/>

                <!-- Buttons -->
                <div style="margin-top:10px" class="form-group actions">
                    <div class="col-sm-12 controls">
                        <%= link_to 'Remove account', @user, :method => :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger pull-left', style: "color:white;" %>
                        <%= f.submit class: "btn btn-success pull-right", style: 'margin-right:5px;' %>
                        <%= link_to "Back", admin_index_path, class: 'btn btn-default pull-right', style: 'margin-right:5px;' %>
                    </div>
                </div>
            <% end %>
        </div>
	</div>
</div>

