<%= render partial: "navbar" %>

<div class = "container">			<!--planner begins-->
	<div class="col-md-9"> <!-- enrolment planner -->
		<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title"><center>Enrolment Planner</center></h3>
				</div>
				<div class="panel-body"> 			
					<div class="row">
						<div class="col-sm-6 col-md-5">
							<% session[:semesters].length.times do |i| %>
								<%= render partial: "sembox", locals: { semester: (i+1), count: i } %>
				 		    <% end %>
						</div>
					</div>
				</div>
		</div>
	</div> 	
	
	<div class="col-md-3"> <!-- Remaining Units -->
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><center>Remaining Units</center></h3>
			</div>
			<div class="panel-body" style="height:500px">
				<div class="list-group">
					<% unless @remain_units.nil? %>
						<% @remain_units.each do |ru| %>
							<%= link_to get_streamunit_name(ru.unit_id), "#", id: ru.id, class: "list-group-item" %>
						<% end %>
					<% end %>
				</div>
				<p>Total remaining units: <%= session[:remain_units].length %></p>
			</div>
		</div>
	</div>

	<div class="col-md-4">  <!-- download and email -->
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><center>Download & Email</center></h3>
			</div>
			<div class="panel-body">
				<input name="download" type="checkbox" class="dl" id="dlPDF" value="checkbox"><label>PDF</label>
				<input name="download" type="checkbox" class="dl" id="dlCSV" value="checkbox"><label>CSV</label>
				<label><a href="#" class="btn btn-default" role="button">Download</a></label>	
			</div>
			<div class="input-group">
	  			<input type="text" value="enter email address" class="form-control">
	  			<span class="input-group-btn">
	    			<button class="btn btn-default" type="button">Send</button>
	  			</span>
			</div><!-- /input-group -->
		</div>
	</div>

	<div class="col-md-5"> <!-- upload your CSV -->
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><center>Upload your CSV</center></h3>
			</div>		
			<div class="panel-body">
				<div class="form-group">
					<input type="file" id="localFile"> <br>
					<label><a href="#" class="btn btn-default" role="button">Upload</a></label>
				</div>
			</div>
		</div>
	</div>

	<div class="col-md-3"> <!-- credit points -->
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><center>Credit Points</center></h3>
			</div>
			<div class="panel-body">
				<p>Completed:</p><%= text_field_tag "disabledInput", nil, class: "form-control", disabled: true, placeholder: calc_credits("completed") %>
				<p>Planned:</p><%= text_field_tag "disabledInput", nil, class: "form-control", disabled: true, placeholder: calc_credits("planned") %>
				<p>Remaining:</p><%= text_field_tag "disabledInput", nil, class: "form-control", disabled: true, placeholder: calc_credits("remaining") %>
			</div>
		</div>
	</div>
</div>					<!--planner ends-->

<%= render partial: "footer" %>
